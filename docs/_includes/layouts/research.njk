---
layout: ./base.njk
page_css: docs.css
---

<div class="doc">

  <main class="doc-content">
    <header class="doc-header">
      <h1>
        {{ title }}
        {% if enabled %}
          <span class="tag is-small">Installed</span>
        {% endif %}
      </h1>
      {{ description | md | safe }}

    </header>

    <div class="doc-body">
      {{ content | safe }}
    </div>
  </main>
</div>