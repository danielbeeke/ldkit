{
  "name": "@ldkit/monorepo",
  "description": "Linked Data Kit repository",
  "scripts": {
    "example:todo-app": "npm -w @ldkit/example-todo-app start",
    "example:bulletin-boards": "npm -w @ldkit/example-bulletin-boards start",
    "example:custom-query": "npm -w @ldkit/example-custom-query start",
    "example:dbpedia-actors": "npm -w @ldkit/example-dbpedia-actors start",
    "clean": "npm -w ./library run clean",
    "prebuild": "npm run clean",
    "build": "npm -w ./library run build",
    "publish": "npm -w ./library publish --access public",
    "test": "npm -w ./specs run test",
    "test:watch": "npm -w ./specs run test:watch",
    "dev": "npm -w ./specs run watch",
    "rimraf-node-modules": "rimraf node_modules"
  },
  "author": "Karel Kl√≠ma",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "library/rdf",
    "library/sparql",
    "library/context",
    "library/engine",
    "library/namespaces",
    "library/schema",
    "library/resource",
    "library/react",
    "library/core",
    "specs",
    "utils/*"
  ],
  "prettier": {
    "semi": true,
    "singleQuote": false
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.0.0",
    "@parcel/transformer-typescript-types": "^2.0.0",
    "parcel": "^2.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4"
  }
}
