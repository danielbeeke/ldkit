{
  "name": "@ldkit/monorepo",
  "description": "Linked Data Kit repository",
  "scripts": {
    "example:todo-app": "parcel ./examples/todo-app",
    "example:bulletin-boards": "parcel ./examples/bulletin-boards",
    "example:bulletin-boards:build": "parcel build ./examples/bulletin-boards --no-scope-hoist",
    "example:custom-query": "parcel ./examples/custom-query",
    "example:dbpedia-actors": "parcel ./examples/dbpedia-actors",
    "clean": "rimraf ./library/*/dist",
    "prebuild": "npm run clean",
    "build": "parcel build library/*",
    "watch": "parcel watch library/*",
    "publish": "npm -w ./library publish --access public",
    "test": "npm -w ./specs run test",
    "test:watch": "npm -w ./specs run test:watch",
    "dev": "npm -w ./specs run watch",
    "rimraf-node-modules": "rimraf node_modules",
    "set-version": "node scripts/set-version.js"
  },
  "author": "Karel Kl√≠ma",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "library/*",
    "specs"
  ],
  "prettier": {
    "semi": true,
    "singleQuote": false
  },
  "devDependencies": {
    "@parcel/packager-ts": "^2.0.1",
    "@parcel/transformer-typescript-types": "^2.0.1",
    "parcel": "^2.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.4.4",
    "yargs": "^17.2.1"
  }
}
