{
  "name": "@ldkit/monorepo",
  "description": "Linked Data Kit repository",
  "scripts": {
    "start:example-todo-app": "npm -w @ldkit/example-todo-app start",
    "build:example-todo-app": "npm -w @ldkit/example-todo-app run build",
    "start:example-bulletin-boards": "npm -w @ldkit/example-bulletin-boards start",
    "build:example-bulletin-boards": "npm -w @ldkit/example-bulletin-boards run build",
    "clean": "npm -w ./library run clean",
    "prebuild": "npm run clean",
    "build": "npm -w ./library run build",
    "publish": "npm -w ./library publish --access public",
    "test": "npm -w ./specs run test",
    "test:watch": "npm -w ./specs run test:watch",
    "dev": "npm -w ./specs run watch",
    "rimraf-node-modules": "rimraf node_modules"
  },
  "author": "Karel Kl√≠ma",
  "license": "MIT",
  "workspaces": [
    "examples/*",
    "library/rdf",
    "library/sparql",
    "library/context",
    "library/engine",
    "library/namespaces",
    "library/schema",
    "library/resource",
    "library/react",
    "library/core",
    "specs",
    "utils/*"
  ],
  "devDependencies": {
    "rimraf": "^3.0.2"
  },
  "prettier": {
    "semi": true,
    "singleQuote": false
  }
}
